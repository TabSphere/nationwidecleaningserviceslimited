---
interface Props {
  name: string;
  title: string;
  description: string;
  imagePath: string;
  isFounder?: boolean;
}

const { name, title, description, imagePath, isFounder = false } = Astro.props;

// Extract initials for placeholder
const initials = name.split(' ').map(n => n[0]).join('').substring(0, 2);
---

<div class={`team-card ${isFounder ? 'founder-card' : 'leadership-card'} fade-in-section`}>
  <div class="team-image-wrapper">
    <div class="team-image-placeholder">
      <span class="team-initials">{initials}</span>
    </div>
    <!-- <img src={imagePath} alt={name} class="team-image" loading="lazy" /> -->
  </div>
  
  <div class="team-content">
    <h3 class="team-name">{name}</h3>
    <p class="team-title">{title}</p>
    <p class="team-description">{description}</p>
  </div>
</div>

<style>
  .team-card {
    background: white;
    border: 2px solid #f3f4f6;
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .team-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 40px rgba(47, 164, 79, 0.12), 0 0 0 2px rgba(47, 164, 79, 0.15);
    border-color: rgba(47, 164, 79, 0.2);
  }
  
  .founder-card {
    border-width: 2px;
  }
  
  .leadership-card {
    border-width: 2px;
  }
  
  .team-image-wrapper {
    position: relative;
    width: 100%;
    padding-top: 100%; /* 1:1 aspect ratio */
    overflow: hidden;
    background: linear-gradient(135deg, #0F1B3D 0%, #1a2d5a 100%);
  }
  
  .team-image-placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #0F1B3D 0%, #1a2d5a 100%);
  }
  
  .team-initials {
    font-size: 3rem;
    font-weight: 700;
    color: #2FA44F;
    font-family: 'Playfair Display', serif;
  }
  
  .team-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: none; /* Hidden until real images are added */
  }
  
  .team-content {
    padding: 1.5rem;
  }
  
  .founder-card .team-content {
    padding: 2rem 1.5rem;
  }
  
  .team-name {
    font-family: 'Playfair Display', serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: #0F1B3D;
    margin-bottom: 0.5rem;
  }
  
  .founder-card .team-name {
    font-size: 1.5rem;
  }
  
  .team-title {
    color: #2FA44F;
    font-weight: 600;
    font-size: 0.875rem;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .founder-card .team-title {
    font-size: 0.9375rem;
    margin-bottom: 1.25rem;
  }
  
  .team-description {
    color: #6b7280;
    font-size: 0.875rem;
    line-height: 1.6;
  }
  
  .founder-card .team-description {
    font-size: 0.9375rem;
  }
  
  @media (prefers-reduced-motion: reduce) {
    .team-card:hover {
      transform: none;
    }
  }
  
  @media (max-width: 768px) {
    .team-initials {
      font-size: 2.5rem;
    }
    
    .team-content {
      padding: 1.25rem;
    }
    
    .founder-card .team-content {
      padding: 1.5rem 1.25rem;
    }
  }
</style>
