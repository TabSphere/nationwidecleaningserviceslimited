---
export interface Props {
  title: string;
  description: string;
  canonical?: string;
}

const { title, description, canonical } = Astro.props;
const currentPath = Astro.url.pathname;
const canonicalURL = canonical || new URL(currentPath, Astro.site).href;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/assets/logo.png" />
    
    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL('/assets/logo.png', Astro.site).href} />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL('/assets/logo.png', Astro.site).href} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700;800&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Schema.org LocalBusiness -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Nationwide Cleaning Services Limited",
      "image": new URL('/assets/logo.png', Astro.site).href,
      "telephone": "07836671796",
      "email": "hello@nationwidecleaningserviceslimited.co.uk",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Flat 2/1, 13 Lower Bridge Street",
        "addressLocality": "Stirling",
        "postalCode": "FK8 1AA",
        "addressCountry": "GB"
      },
      "areaServed": {
        "@type": "GeoCircle",
        "geoMidpoint": {
          "@type": "GeoCoordinates",
          "latitude": "56.1165",
          "longitude": "-3.9369"
        },
        "geoRadius": "50000"
      },
      "priceRange": "££",
      "openingHours": "Mo-Su 08:00-18:00",
      "url": Astro.site?.href
    })} />
  </head>
  <body class="font-sans text-gray-800 bg-white">
    <!-- Header - Premium Light Glass Design -->
    <header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-b border-gray-200/50 shadow-sm transition-all">
      <nav class="container mx-auto px-4 lg:px-8">
        <div class="flex items-center justify-between h-20">
          <!-- Logo with Enhanced Presence -->
          <a href="/" class="flex items-center gap-3 group logo-link">
            <div class="logo-badge-premium">
              <img src="/assets/logo.png" alt="Nationwide Cleaning Services Logo" class="logo-image-premium" />
            </div>
            <div class="logo-text hidden lg:block">
              <div class="text-navy font-display text-lg leading-tight font-bold">Nationwide Cleaning</div>
              <div class="text-green text-xs font-semibold tracking-wide">Services Limited</div>
            </div>
          </a>
          
          <!-- Desktop Nav -->
          <div class="hidden lg:flex items-center gap-8">
            <a href="/" class={`text-sm font-medium transition-colors hover:text-green ${currentPath === '/' ? 'text-green' : 'text-navy'}`}>Home</a>
            <a href="/about" class={`text-sm font-medium transition-colors hover:text-green ${currentPath === '/about' ? 'text-green' : 'text-navy'}`}>About</a>
            <a href="/services" class={`text-sm font-medium transition-colors hover:text-green ${currentPath === '/services' ? 'text-green' : 'text-navy'}`}>Services</a>
            <a href="/join-our-team" class={`text-sm font-medium transition-colors hover:text-green ${currentPath === '/join-our-team' ? 'text-green' : 'text-navy'}`}>Careers</a>
            <a href="/contact" class={`text-sm font-medium transition-colors hover:text-green ${currentPath === '/contact' ? 'text-green' : 'text-navy'}`}>Contact</a>
            <a href="tel:07836671796" class="text-navy hover:text-green transition-colors flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span class="text-sm">07836 671796</span>
            </a>
            <a href="/get-a-quote" class="bg-green hover:bg-green/90 text-white px-6 py-3 rounded-lg font-semibold text-sm transition-all hover:shadow-lg hover:scale-[1.02]">
              Get a Free Quote
            </a>
          </div>
          
          <!-- Mobile Menu Button -->
          <button id="mobile-menu-btn" class="lg:hidden text-navy p-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
        
        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden lg:hidden pb-4 border-t border-gray-200 mt-2">
          <div class="flex flex-col gap-3 pt-4">
            <a href="/" class={`text-sm font-medium transition-colors hover:text-green ${currentPath === '/' ? 'text-green' : 'text-navy'}`}>Home</a>
            <a href="/about" class={`text-sm font-medium transition-colors hover:text-green ${currentPath === '/about' ? 'text-green' : 'text-navy'}`}>About</a>
            <a href="/services" class={`text-sm font-medium transition-colors hover:text-green ${currentPath === '/services' ? 'text-green' : 'text-navy'}`}>Services</a>
            <a href="/join-our-team" class={`text-sm font-medium transition-colors hover:text-green ${currentPath === '/join-our-team' ? 'text-green' : 'text-navy'}`}>Careers</a>
            <a href="/contact" class={`text-sm font-medium transition-colors hover:text-green ${currentPath === '/contact' ? 'text-green' : 'text-navy'}`}>Contact</a>
            <a href="tel:07836671796" class="text-navy hover:text-green transition-colors flex items-center gap-2 py-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span class="text-sm">07836 671796</span>
            </a>
            <a href="/get-a-quote" class="bg-green hover:bg-green/90 text-white px-6 py-3 rounded-lg font-semibold text-sm transition-all text-center">
              Get a Free Quote
            </a>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="pt-20">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-navy text-white mt-20">
      <div class="container mx-auto px-4 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
          <!-- Company Info -->
          <div>
            <div class="logo-badge-footer mb-4">
              <img src="/assets/logo.png" alt="Nationwide Cleaning Services Logo" class="h-14 w-auto" />
            </div>
            <p class="text-sm text-gray-300 mb-4">
              Professional cleaning services across Stirling and surrounding areas in Scotland.
            </p>
          </div>
          
          <!-- Quick Links -->
          <div>
            <h3 class="font-display text-lg font-semibold mb-4">Quick Links</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="/" class="text-gray-300 hover:text-green transition-colors">Home</a></li>
              <li><a href="/about" class="text-gray-300 hover:text-green transition-colors">About Us</a></li>
              <li><a href="/services" class="text-gray-300 hover:text-green transition-colors">Services</a></li>
              <li><a href="/get-a-quote" class="text-gray-300 hover:text-green transition-colors">Get a Quote</a></li>
              <li><a href="/join-our-team" class="text-gray-300 hover:text-green transition-colors">Join Our Team</a></li>
              <li><a href="/contact" class="text-gray-300 hover:text-green transition-colors">Contact</a></li>
              <li><a href="/privacy" class="text-gray-300 hover:text-green transition-colors">Privacy Policy</a></li>
            </ul>
          </div>
          
          <!-- Services -->
          <div>
            <h3 class="font-display text-lg font-semibold mb-4">Services</h3>
            <ul class="space-y-2 text-sm text-gray-300">
              <li>Regular House Cleaning</li>
              <li>Commercial Cleaning</li>
              <li>Move In/Out Cleaning</li>
              <li>Office Cleaning</li>
              <li>Carpet Cleaning</li>
              <li>Eco-Friendly Options</li>
            </ul>
          </div>
          
          <!-- Contact -->
          <div>
            <h3 class="font-display text-lg font-semibold mb-4">Contact Us</h3>
            <div class="space-y-3 text-sm text-gray-300">
              <a href="tel:07836671796" class="flex items-center gap-2 hover:text-green transition-colors">
                <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                07836 671796
              </a>
              <a href="mailto:hello@nationwidecleaningserviceslimited.co.uk" class="flex items-center gap-2 hover:text-green transition-colors break-all">
                <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                hello@nationwidecleaningserviceslimited.co.uk
              </a>
              <div class="flex items-start gap-2">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span>Flat 2/1, 13 Lower Bridge Street, Stirling FK8 1AA</span>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Bottom Bar -->
        <div class="border-t border-gray-700 pt-8 text-center text-sm text-gray-400">
          <p>© 2026 Nationwide Cleaning Services Limited. Registered office: Flat 2/1, 13 Lower Bridge Street, Stirling FK8 1AA.</p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const menuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');
      
      menuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
      
      // Scroll animations
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate-fade-in');
          }
        });
      }, observerOptions);
      
      document.querySelectorAll('.fade-in-section').forEach(el => observer.observe(el));
    </script>

    <style>
      /* Logo Badge Styles - Enhanced */
      .logo-badge {
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.12);
        border-radius: 12px;
        padding: 10px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.25);
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
      }
      
      /* Premium Logo Badge - Light Header */
      .logo-badge-premium {
        background: rgba(15, 27, 61, 0.03);
        border: 1px solid rgba(15, 27, 61, 0.08);
        border-radius: 12px;
        padding: 10px 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
      }
      
      .logo-link:hover .logo-badge-premium,
      .logo-link:focus .logo-badge-premium {
        box-shadow: 0 4px 12px rgba(47, 164, 79, 0.15);
        background: rgba(47, 164, 79, 0.05);
        border-color: rgba(47, 164, 79, 0.15);
      }
      
      .logo-image-premium {
        height: 60px;
        width: auto;
        display: block;
        transition: transform 0.3s ease;
      }
      
      .logo-link:hover .logo-image-premium {
        transform: scale(1.03);
      }
      
      .logo-link:hover .logo-badge,
      .logo-link:focus .logo-badge {
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3), 0 0 15px rgba(47, 164, 79, 0.15);
        background: rgba(255, 255, 255, 0.08);
      }
      
      .logo-image {
        height: 57px; /* Increased by ~10% from 52px */
        width: auto;
        display: block;
        transition: transform 0.3s ease;
      }
      
      .logo-link:hover .logo-image {
        transform: scale(1.03);
      }
      
      @media (max-width: 768px) {
        .logo-image {
          height: 48px; /* Increased by ~10% from 44px */
        }
        
        .logo-image-premium {
          height: 50px;
        }
        
        .logo-badge {
          padding: 8px;
        }
        
        .logo-badge-premium {
          padding: 8px 10px;
        }
      }
      
      .logo-text {
        animation: slideInRight 0.5s ease-out;
      }
      
      @keyframes slideInRight {
        from {
          opacity: 0;
          transform: translateX(-10px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }
      
      /* Footer Logo Badge - Enhanced */
      .logo-badge-footer {
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.10);
        border-radius: 12px;
        padding: 12px;
        display: inline-flex;
        width: fit-content;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
      }
      
      /* Smooth Scrolling */
      html {
        scroll-behavior: smooth;
      }
      
      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }
      
      /* Card Animation Styles */
      @keyframes fade-in-up {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      .animate-fade-in {
        animation: fade-in-up 0.6s ease-out forwards;
      }
      
      .fade-in-section {
        opacity: 0;
      }
      
      /* Stagger animation delays */
      .animate-fade-in:nth-child(1) { animation-delay: 0.1s; }
      .animate-fade-in:nth-child(2) { animation-delay: 0.2s; }
      .animate-fade-in:nth-child(3) { animation-delay: 0.3s; }
      .animate-fade-in:nth-child(4) { animation-delay: 0.4s; }
      .animate-fade-in:nth-child(5) { animation-delay: 0.5s; }
      .animate-fade-in:nth-child(6) { animation-delay: 0.6s; }
      
      @media (prefers-reduced-motion: reduce) {
        .animate-fade-in,
        .fade-in-section {
          animation: none;
          opacity: 1;
          transform: none;
        }
      }
      
      /* Enhanced Card Hover Effects */
      .card-enhanced {
        transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
      }
      
      .card-enhanced:hover {
        transform: translateY(-6px);
        box-shadow: 0 12px 30px rgba(47, 164, 79, 0.12), 0 0 0 1px rgba(47, 164, 79, 0.15);
      }
      
      .card-enhanced .card-icon {
        transition: all 0.25s ease;
      }
      
      .card-enhanced:hover .card-icon {
        transform: scale(1.08) rotate(3deg);
      }
      
      /* Button Enhancements */
      button,
      a.bg-green,
      .btn-primary {
        transition: all 0.25s ease;
      }
      
      button:hover,
      a.bg-green:hover,
      .btn-primary:hover {
        transform: scale(1.02);
      }
      
      @media (prefers-reduced-motion: reduce) {
        .card-enhanced:hover {
          transform: translateY(-2px);
        }
        
        .card-enhanced:hover .card-icon {
          transform: scale(1.02);
        }
        
        button:hover,
        a.bg-green:hover,
        .btn-primary:hover {
          transform: none;
        }
      }
      
      /* Mobile: Reduce animation intensity */
      @media (max-width: 768px) {
        .card-enhanced:hover {
          transform: translateY(-4px);
        }
        
        .card-enhanced:hover .card-icon {
          transform: scale(1.05) rotate(2deg);
        }
      }
      
      /* Focus Visible Styles */
      a:focus-visible,
      button:focus-visible {
        outline: 2px solid #2FA44F;
        outline-offset: 2px;
      }
      
      /* Team Section Styles */
      .team-member-card img {
        transition: transform 0.3s ease;
      }
      
      .team-member-card:hover img {
        transform: scale(1.05);
      }
      
      @media (prefers-reduced-motion: reduce) {
        .team-member-card:hover img {
          transform: scale(1.01);
        }
      }
    </style>
  </body>
</html>
