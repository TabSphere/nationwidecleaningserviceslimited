---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroBackground from '../components/HeroBackground.astro';

const isSuccess = Astro.url.searchParams.get('success') === '1';
---

<BaseLayout
  title="Join Our Team | Nationwide Cleaning Services Limited"
  description="Join the Nationwide Cleaning Services team. We're hiring cleaners, supervisors, and admin staff across Stirling and surrounding areas. Apply today."
>
  <!-- Hero with Background Slideshow -->
  <section class="relative bg-gradient-to-br from-navy via-navy to-navy/90 text-white overflow-hidden">
    <HeroBackground />

    <div class="container mx-auto px-4 lg:px-8 py-20 lg:py-24 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 mb-6 px-4 py-2 bg-green/20 border border-green/30 rounded-full text-green text-sm font-semibold backdrop-blur-sm">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7V5a2 2 0 00-2-2h-4a2 2 0 00-2 2v2M4 9h16v10a2 2 0 01-2 2H6a2 2 0 01-2-2V9z" />
          </svg>
          We’re Hiring
        </div>

        <h1 class="font-display text-4xl md:text-5xl font-bold mb-6 leading-tight">
          Join Our Team
        </h1>

        <p class="text-xl text-gray-200 mb-8">
          Flexible hours, competitive pay, and a supportive team environment — serving Stirling and surrounding areas.
        </p>

        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <a href="#apply" class="inline-flex items-center justify-center bg-green hover:bg-green/90 text-white px-7 py-3 rounded-xl font-semibold transition-all hover:shadow-lg">
            Apply now
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
          <a href="mailto:hello@nationwidecleaningserviceslimited.co.uk"
             class="inline-flex items-center justify-center bg-white/10 hover:bg-white/15 text-white px-7 py-3 rounded-xl font-semibold ring-1 ring-white/15 transition-all">
            Email your CV
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Join Us -->
  <section class="py-20">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="font-display text-3xl md:text-4xl font-bold text-navy mb-4">Why work with us?</h2>
          <p class="text-lg text-gray-600">We value our team and offer a supportive, well-organised environment.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
          <div class="bg-white border-2 border-gray-100 rounded-2xl p-6 text-center card-enhanced fade-in-section">
            <div class="w-14 h-14 bg-green/10 rounded-xl flex items-center justify-center mx-auto mb-4 card-icon">
              <svg class="w-7 h-7 text-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="font-semibold text-navy mb-2">Flexible hours</h3>
            <p class="text-sm text-gray-600">Choose shifts that fit your schedule</p>
          </div>

          <div class="bg-white border-2 border-gray-100 rounded-2xl p-6 text-center card-enhanced fade-in-section">
            <div class="w-14 h-14 bg-green/10 rounded-xl flex items-center justify-center mx-auto mb-4 card-icon">
              <svg class="w-7 h-7 text-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="font-semibold text-navy mb-2">Competitive pay</h3>
            <p class="text-sm text-gray-600">Fair wages and regular pay reviews</p>
          </div>

          <div class="bg-white border-2 border-gray-100 rounded-2xl p-6 text-center card-enhanced fade-in-section">
            <div class="w-14 h-14 bg-green/10 rounded-xl flex items-center justify-center mx-auto mb-4 card-icon">
              <svg class="w-7 h-7 text-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
            </div>
            <h3 class="font-semibold text-navy mb-2">Full training</h3>
            <p class="text-sm text-gray-600">We train you properly for the role</p>
          </div>

          <div class="bg-white border-2 border-gray-100 rounded-2xl p-6 text-center card-enhanced fade-in-section">
            <div class="w-14 h-14 bg-green/10 rounded-xl flex items-center justify-center mx-auto mb-4 card-icon">
              <svg class="w-7 h-7 text-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="font-semibold text-navy mb-2">Local work</h3>
            <p class="text-sm text-gray-600">Work across Stirling and nearby areas</p>
          </div>
        </div>

        <!-- Current Opportunities -->
        <div class="bg-gray-50 rounded-2xl p-8 border border-gray-200 mb-16">
          <h3 class="font-display text-2xl font-bold text-navy mb-6">Current opportunities</h3>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-white rounded-2xl border border-gray-200 p-6">
              <h4 class="font-semibold text-navy mb-2">Cleaning Operatives</h4>
              <p class="text-sm text-gray-600">
                Full-time and part-time roles. Experience preferred but not essential — training provided.
              </p>
            </div>

            <div class="bg-white rounded-2xl border border-gray-200 p-6">
              <h4 class="font-semibold text-navy mb-2">Team Supervisors</h4>
              <p class="text-sm text-gray-600">
                For experienced cleaners ready to lead small teams and maintain high standards.
              </p>
            </div>

            <div class="bg-white rounded-2xl border border-gray-200 p-6">
              <h4 class="font-semibold text-navy mb-2">Administrative Support</h4>
              <p class="text-sm text-gray-600">
                Part-time role supporting scheduling, customer service, and general admin.
              </p>
            </div>
          </div>
        </div>

        <!-- Application Form (Netlify) -->
        <div id="apply" class="bg-white border-2 border-gray-200 rounded-2xl p-8 scroll-mt-24">
          <h3 class="font-display text-2xl font-bold text-navy mb-2">Apply now</h3>
          <p class="text-gray-600 mb-8">
            Fill in the form and upload your CV. If you prefer, you can email your CV directly.
          </p>

          {isSuccess && (
            <div class="bg-green/10 border border-green/30 rounded-xl p-6 mb-8">
              <div class="flex gap-3">
                <svg class="w-6 h-6 text-green flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                  <h4 class="font-semibold text-green mb-1">Application received!</h4>
                  <p class="text-sm text-gray-700">Thanks — we’ll review it and get back to you as soon as possible.</p>
                </div>
              </div>
            </div>
          )}

          <form
            name="careers"
            method="POST"
            action="/join-our-team/?success=1"
            data-netlify="true"
            netlify-honeypot="bot-field"
            enctype="multipart/form-data"
            class="space-y-6"
          >
            <input type="hidden" name="form-name" value="careers" />

            <!-- Honeypot -->
            <p class="hidden">
              <label>
                Don’t fill this out:
                <input name="bot-field" />
              </label>
            </p>

            <!-- Personal Details -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-semibold text-navy mb-2">
                  Full name <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-green focus:outline-none transition-colors"
                  placeholder="John Smith"
                />
              </div>

              <div>
                <label for="phone" class="block text-sm font-semibold text-navy mb-2">
                  Phone number <span class="text-red-500">*</span>
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-green focus:outline-none transition-colors"
                  placeholder="07XXX XXXXXX"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-semibold text-navy mb-2">
                Email address <span class="text-red-500">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-green focus:outline-none transition-colors"
                placeholder="john.smith@example.com"
              />
            </div>

            <div>
              <label for="postcode" class="block text-sm font-semibold text-navy mb-2">
                Postcode (optional)
              </label>
              <input
                type="text"
                id="postcode"
                name="postcode"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-green focus:outline-none transition-colors"
                placeholder="FK8"
              />
            </div>

            <!-- Position Details -->
            <div class="border-t border-gray-200 pt-6">
              <h4 class="font-semibold text-navy mb-6">Position details</h4>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="role" class="block text-sm font-semibold text-navy mb-2">
                    Role interested in <span class="text-red-500">*</span>
                  </label>
                  <select
                    id="role"
                    name="role"
                    required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-green focus:outline-none transition-colors appearance-none bg-white"
                  >
                    <option value="">Select a role…</option>
                    <option value="cleaner">Cleaning Operative</option>
                    <option value="supervisor">Team Supervisor</option>
                    <option value="admin">Administrative Support</option>
                    <option value="other">Other</option>
                  </select>
                </div>

                <div>
                  <label for="availability" class="block text-sm font-semibold text-navy mb-2">
                    Availability <span class="text-red-500">*</span>
                  </label>
                  <select
                    id="availability"
                    name="availability"
                    required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-green focus:outline-none transition-colors appearance-none bg-white"
                  >
                    <option value="">Select availability…</option>
                    <option value="full-time">Full-time (35+ hours/week)</option>
                    <option value="part-time">Part-time (15–34 hours/week)</option>
                    <option value="flexible">Flexible hours</option>
                    <option value="weekends">Weekends only</option>
                  </select>
                </div>
              </div>
            </div>

            <!-- CV Upload -->
            <div>
              <label for="cv" class="block text-sm font-semibold text-navy mb-2">
                Upload your CV <span class="text-red-500">*</span>
              </label>
              <input
                type="file"
                id="cv"
                name="cv"
                required
                accept=".pdf,.doc,.docx"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-green focus:outline-none transition-colors
                       file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:bg-green file:text-white file:cursor-pointer hover:file:bg-green/90"
              />
              <p class="text-xs text-gray-500 mt-2">Accepted formats: PDF, DOC, DOCX</p>
            </div>

            <!-- Message -->
            <div>
              <label for="message" class="block text-sm font-semibold text-navy mb-2">
                Additional information (optional)
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-green focus:outline-none transition-colors resize-none"
                placeholder="Tell us about your experience, preferred days, or anything we should know…"
              ></textarea>
            </div>

            <!-- Submit -->
            <div class="flex flex-col sm:flex-row gap-3 items-start sm:items-center">
              <button
                type="submit"
                class="w-full sm:w-auto bg-green hover:bg-green/90 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all hover:shadow-lg"
              >
                Submit application
              </button>

              <a
                href="mailto:hello@nationwidecleaningserviceslimited.co.uk?subject=CV%20Submission%20-%20Nationwide%20Cleaning%20Services"
                class="w-full sm:w-auto inline-flex items-center justify-center bg-navy hover:bg-navy/90 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all"
              >
                Or email your CV
              </a>
            </div>

            <p class="text-xs text-gray-500">
              By submitting this form, you consent to us contacting you about your application. We handle applications confidentially.
            </p>
          </form>

          <div class="mt-8 pt-8 border-t border-gray-200">
            <p class="text-sm text-gray-600 mb-2">
              <strong>Note:</strong> If you don’t see submissions in Netlify immediately, make sure you’ve deployed once after adding the form.
            </p>
            <p class="text-sm text-gray-600">
              Email: <a class="text-green font-semibold hover:text-green/80" href="mailto:hello@nationwidecleaningserviceslimited.co.uk">hello@nationwidecleaningserviceslimited.co.uk</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
    select {
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
      background-position: right 0.75rem center;
      background-repeat: no-repeat;
      background-size: 1.25em 1.25em;
      padding-right: 2.75rem;
    }
  </style>
</BaseLayout>