---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroBackground from '../components/HeroBackground.astro';
---

<BaseLayout 
  title="Join Our Team | Nationwide Cleaning Services Limited"
  description="Join the Nationwide Cleaning Services team. We're hiring cleaners, supervisors, and admin staff across Stirling and surrounding areas. Apply today."
>
  <!-- Hero with Background Slideshow -->
  <section class="relative bg-gradient-to-br from-navy via-navy to-navy/90 text-white overflow-hidden">
    <HeroBackground />
    
    <div class="container mx-auto px-4 lg:px-8 py-20 lg:py-24 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-block mb-6 px-4 py-2 bg-green/20 border border-green/30 rounded-full text-green text-sm font-semibold backdrop-blur-sm">
          ðŸ’¼ We're Hiring
        </div>
        
        <h1 class="font-display text-4xl md:text-5xl font-bold mb-6 leading-tight">
          Join Our Team
        </h1>
        
        <p class="text-xl text-gray-200 mb-8">
          Become part of Stirling's leading cleaning company. Flexible hours, competitive pay, and a supportive team environment.
        </p>
      </div>
    </div>
  </section>

  <!-- Why Join Us -->
  <section class="py-20">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="font-display text-3xl md:text-4xl font-bold text-navy mb-4">Why Work With Us?</h2>
          <p class="text-lg text-gray-600">
            We value our team and offer a great work environment.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
          <div class="bg-white border-2 border-gray-100 rounded-2xl p-6 text-center card-enhanced fade-in-section">
            <div class="w-14 h-14 bg-green/10 rounded-xl flex items-center justify-center mx-auto mb-4 card-icon">
              <svg class="w-7 h-7 text-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="font-semibold text-navy mb-2">Flexible Hours</h3>
            <p class="text-sm text-gray-600">Choose shifts that fit your schedule</p>
          </div>

          <div class="bg-white border-2 border-gray-100 rounded-2xl p-6 text-center card-enhanced fade-in-section">
            <div class="w-14 h-14 bg-green/10 rounded-xl flex items-center justify-center mx-auto mb-4 card-icon">
              <svg class="w-7 h-7 text-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="font-semibold text-navy mb-2">Competitive Pay</h3>
            <p class="text-sm text-gray-600">Fair wages and regular pay reviews</p>
          </div>

          <div class="bg-white border-2 border-gray-100 rounded-2xl p-6 text-center card-enhanced fade-in-section">
            <div class="w-14 h-14 bg-green/10 rounded-xl flex items-center justify-center mx-auto mb-4 card-icon">
              <svg class="w-7 h-7 text-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
            </div>
            <h3 class="font-semibold text-navy mb-2">Full Training</h3>
            <p class="text-sm text-gray-600">Complete training provided for all roles</p>
          </div>

          <div class="bg-white border-2 border-gray-100 rounded-2xl p-6 text-center card-enhanced fade-in-section">
            <div class="w-14 h-14 bg-green/10 rounded-xl flex items-center justify-center mx-auto mb-4 card-icon">
              <svg class="w-7 h-7 text-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="font-semibold text-navy mb-2">Local Work</h3>
            <p class="text-sm text-gray-600">Work close to home in Stirling area</p>
          </div>
        </div>

        <!-- Current Opportunities -->
        <div class="bg-gray-50 rounded-2xl p-8 border border-gray-200 mb-16">
          <h3 class="font-display text-2xl font-bold text-navy mb-6">Current Opportunities</h3>
          <div class="space-y-4">
            <div class="flex items-start gap-4">
              <svg class="w-5 h-5 text-green flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <h4 class="font-semibold text-navy mb-1">Cleaning Operatives</h4>
                <p class="text-sm text-gray-600">Full-time and part-time positions available. Experience preferred but not essential as full training provided.</p>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <svg class="w-5 h-5 text-green flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <h4 class="font-semibold text-navy mb-1">Team Supervisors</h4>
                <p class="text-sm text-gray-600">Looking for experienced cleaners to lead small teams. Leadership and organizational skills required.</p>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <svg class="w-5 h-5 text-green flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <h4 class="font-semibold text-navy mb-1">Administrative Support</h4>
                <p class="text-sm text-gray-600">Part-time office role to support scheduling, customer service, and general administration.</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Application Form -->
        <div class="bg-white border-2 border-gray-200 rounded-2xl p-8">
          <h3 class="font-display text-2xl font-bold text-navy mb-2">Apply Now</h3>
          <p class="text-gray-600 mb-8">
            Fill out the form below and upload your CV. We'll review your application and get back to you within 48 hours.
          </p>

          <!-- Success Message -->
          <div id="success-message" class="hidden bg-green/10 border border-green/30 rounded-lg p-6 mb-6">
            <div class="flex gap-3">
              <svg class="w-6 h-6 text-green flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div>
                <h4 class="font-semibold text-green mb-1">Application Received!</h4>
                <p class="text-sm text-gray-700">Thank you for applying. We'll review your CV and contact you within 48 hours.</p>
              </div>
            </div>
          </div>

          <form id="careers-form" class="space-y-6">
            <!-- Personal Details -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-semibold text-navy mb-2">
                  Full Name <span class="text-red-500">*</span>
                </label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-green focus:outline-none transition-colors"
                  placeholder="John Smith"
                />
              </div>

              <div>
                <label for="phone" class="block text-sm font-semibold text-navy mb-2">
                  Phone Number <span class="text-red-500">*</span>
                </label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone" 
                  required
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-green focus:outline-none transition-colors"
                  placeholder="07XXX XXXXXX"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-semibold text-navy mb-2">
                Email Address <span class="text-red-500">*</span>
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-green focus:outline-none transition-colors"
                placeholder="john.smith@example.com"
              />
            </div>

            <div>
              <label for="postcode" class="block text-sm font-semibold text-navy mb-2">
                Postcode
              </label>
              <input 
                type="text" 
                id="postcode" 
                name="postcode"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-green focus:outline-none transition-colors"
                placeholder="FK8 1AA"
              />
            </div>

            <!-- Job Details -->
            <div class="border-t border-gray-200 pt-6">
              <h4 class="font-semibold text-navy mb-6">Position Details</h4>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="role" class="block text-sm font-semibold text-navy mb-2">
                    Role Interested In <span class="text-red-500">*</span>
                  </label>
                  <select 
                    id="role" 
                    name="role" 
                    required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-green focus:outline-none transition-colors appearance-none bg-white"
                  >
                    <option value="">Select a role...</option>
                    <option value="cleaner">Cleaning Operative</option>
                    <option value="supervisor">Team Supervisor</option>
                    <option value="admin">Administrative Support</option>
                    <option value="other">Other</option>
                  </select>
                </div>

                <div>
                  <label for="availability" class="block text-sm font-semibold text-navy mb-2">
                    Availability <span class="text-red-500">*</span>
                  </label>
                  <select 
                    id="availability" 
                    name="availability" 
                    required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-green focus:outline-none transition-colors appearance-none bg-white"
                  >
                    <option value="">Select availability...</option>
                    <option value="full-time">Full-time (35+ hours/week)</option>
                    <option value="part-time">Part-time (15-34 hours/week)</option>
                    <option value="flexible">Flexible hours</option>
                    <option value="weekends">Weekends only</option>
                  </select>
                </div>
              </div>
            </div>

            <!-- CV Upload -->
            <div>
              <label for="cv" class="block text-sm font-semibold text-navy mb-2">
                Upload Your CV <span class="text-red-500">*</span>
              </label>
              <input 
                type="file" 
                id="cv" 
                name="cv" 
                required
                accept=".pdf,.doc,.docx"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-green focus:outline-none transition-colors file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:bg-green file:text-white file:cursor-pointer hover:file:bg-green/90"
              />
              <p class="text-xs text-gray-500 mt-2">Accepted formats: PDF, DOC, DOCX (max 5MB)</p>
            </div>

            <!-- Message -->
            <div>
              <label for="message" class="block text-sm font-semibold text-navy mb-2">
                Additional Information (Optional)
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="4"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-green focus:outline-none transition-colors resize-none"
                placeholder="Tell us about your experience, why you'd like to join our team, or any questions you have..."
              ></textarea>
            </div>

            <!-- Honeypot -->
            <input type="text" name="_gotcha" style="display:none" />

            <!-- Submit -->
            <div>
              <button 
                type="submit" 
                class="w-full md:w-auto bg-green hover:bg-green/90 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all hover:shadow-lg disabled:opacity-50 disabled:cursor-not-allowed"
                id="submit-btn"
              >
                <span id="submit-text">Submit Application</span>
                <span id="submit-loading" class="hidden">Sending...</span>
              </button>
            </div>

            <p class="text-xs text-gray-500">
              By submitting this form, you consent to us contacting you regarding your application. We respect your privacy and handle all applications confidentially.
            </p>
          </form>

          <!-- Alternative Contact -->
          <div class="mt-8 pt-8 border-t border-gray-200">
            <p class="text-sm text-gray-600 mb-4">
              <strong>Having trouble with the form?</strong> You can also email your CV directly to:
            </p>
            <a href="mailto:hello@nationwidecleaningserviceslimited.co.uk" class="inline-flex items-center text-green hover:text-green/80 font-semibold">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              hello@nationwidecleaningserviceslimited.co.uk
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    const form = document.getElementById('careers-form') as HTMLFormElement;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
    const submitText = document.getElementById('submit-text') as HTMLSpanElement;
    const submitLoading = document.getElementById('submit-loading') as HTMLSpanElement;
    const successMessage = document.getElementById('success-message') as HTMLDivElement;

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Disable submit button
      submitBtn.disabled = true;
      submitText.classList.add('hidden');
      submitLoading.classList.remove('hidden');
      
      const formData = new FormData(form);
      
      try {
        // OPTION A: Formspree with file upload (requires Gold plan)
        // Replace with your Formspree endpoint that supports file uploads
        const response = await fetch('YOUR_FORMSPREE_CAREERS_ENDPOINT_HERE', {
          method: 'POST',
          body: formData,
          headers: {
            'Accept': 'application/json'
          }
        });
        
        if (response.ok) {
          // Show success message
          successMessage.classList.remove('hidden');
          form.reset();
          
          // Scroll to success message
          successMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
        } else {
          alert('There was a problem submitting your application. Please try emailing your CV directly to hello@nationwidecleaningserviceslimited.co.uk');
        }
      } catch (error) {
        alert('There was a problem submitting your application. Please try emailing your CV directly to hello@nationwidecleaningserviceslimited.co.uk');
      } finally {
        // Re-enable submit button
        submitBtn.disabled = false;
        submitText.classList.remove('hidden');
        submitLoading.classList.add('hidden');
      }
    });
  </script>

  <style>
    select {
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
      background-position: right 0.5rem center;
      background-repeat: no-repeat;
      background-size: 1.5em 1.5em;
      padding-right: 2.5rem;
    }
  </style>
</BaseLayout>
