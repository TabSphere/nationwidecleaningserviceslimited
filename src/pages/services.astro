---

<BaseLayout 
  title="Our Cleaning Services | Nationwide Cleaning Services Limited"
  description="Comprehensive cleaning services in Stirling and surrounding areas. Regular house cleaning, commercial cleaning, move in/out, carpet cleaning, and eco-friendly options."
>
  <!-- Hero with Background Slideshow -->
  <section class="relative bg-gradient-to-br from-navy to-navy/95 text-white py-20 overflow-hidden">
    <HeroBackground />
    
    <div class="container mx-auto px-4 lg:px-8 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="font-display text-4xl md:text-5xl font-bold mb-6">Our Cleaning Services</h1>
        <p class="text-xl text-gray-200 mb-8">
          Professional cleaning solutions tailored to your needs. From regular house cleaning to specialized commercial services.
        </p>
        <a href="/get-a-quote" class="inline-flex items-center justify-center bg-green hover:bg-green/90 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all hover:shadow-lg">
          Get a Free Quote
        </a>
      </div>
    </div>
  </section>

  <!-- Services List -->
  <section class="py-20">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="space-y-16">
        {services.map((service, index) => (
          <div id={service.id} class="scroll-mt-24 fade-in-section">
            <div class={`grid grid-cols-1 lg:grid-cols-2 gap-12 items-start ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
              <!-- Service Info -->
              <div class={index % 2 === 1 ? 'lg:order-2' : ''}>
                <div class="flex items-center gap-4 mb-6">
                  <div class="w-16 h-16 bg-green/10 rounded-xl flex items-center justify-center flex-shrink-0">
                    <svg class="w-8 h-8 text-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={service.icon} />
                    </svg>
                  </div>
                  <h2 class="font-display text-3xl font-bold text-navy">{service.title}</h2>
                </div>
                
                <p class="text-lg text-gray-600 mb-8">
                  {service.description}
                </p>
                
                <a href="/get-a-quote" class="inline-flex items-center justify-center bg-green hover:bg-green/90 text-white px-6 py-3 rounded-lg font-semibold transition-all hover:shadow-lg">
                  Request This Service
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                </a>
              </div>
              
              <!-- Details -->
              <div class={`space-y-6 ${index % 2 === 1 ? 'lg:order-1' : ''}`}>
                <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
                  <h3 class="font-display text-xl font-semibold text-navy mb-4">What's Included</h3>
                  <ul class="space-y-3">
                    {service.whatIncluded.map((item) => (
                      <li class="flex items-start gap-3">
                        <svg class="w-5 h-5 text-green flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        <span class="text-gray-700">{item}</span>
                      </li>
                    ))}
                  </ul>
                </div>
                
                <div class="bg-green/5 rounded-xl p-6 border border-green/20">
                  <h3 class="font-display text-xl font-semibold text-navy mb-4">Ideal For</h3>
                  <ul class="space-y-3">
                    {service.idealFor.map((item) => (
                      <li class="flex items-start gap-3">
                        <svg class="w-5 h-5 text-green flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                        <span class="text-gray-700">{item}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
            
            {index < services.length - 1 && (
              <div class="mt-16 border-b border-gray-200"></div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Quick Links -->
  <section class="py-12 bg-gray-50 fade-in-section">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="text-center mb-8">
        <h2 class="font-display text-2xl font-bold text-navy mb-2">Jump to a Service</h2>
        <p class="text-gray-600">Quick navigation to specific cleaning services</p>
      </div>
      <div class="flex flex-wrap justify-center gap-3">
        {services.map((service) => (
          <a href={`#${service.id}`} class="px-4 py-2 bg-white hover:bg-green hover:text-white border border-gray-200 hover:border-green rounded-lg text-navy font-medium transition-all">
            {service.title}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-green to-green/90 text-white fade-in-section">
    <div class="container mx-auto px-4 lg:px-8 text-center">
      <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">Ready to Get Started?</h2>
      <p class="text-xl mb-10 max-w-2xl mx-auto text-white/90">
        Contact us today for a free, no-obligation quote. We'll create a cleaning plan that fits your needs and budget.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/get-a-quote" class="inline-flex items-center justify-center bg-white text-green hover:bg-gray-50 px-8 py-4 rounded-lg font-semibold text-lg transition-all hover:shadow-xl">
          Get Your Free Quote
        </a>
        <a href="tel:07836671796" class="inline-flex items-center justify-center bg-navy hover:bg-navy/90 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call 07836 671796
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
