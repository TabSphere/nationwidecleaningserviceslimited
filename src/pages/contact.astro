---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroBackground from "../components/HeroBackground.astro";

const WHATSAPP_LINK = "https://wa.me/447836671796";
const FACEBOOK_LINK = "https://www.facebook.com/share/1GMbUH2NiZ/?mibextid=wwXIfr";
const INSTAGRAM_LINK = "#"; // add later
const EMAIL = "hello@nationwidecleaningserviceslimited.co.uk";
---

<BaseLayout
  title="Contact Us | Nationwide Cleaning Services Limited"
  description="Contact Nationwide Cleaning Services Limited for quotes and bookings. Reach us via WhatsApp, phone, email, or social media."
>
  <!-- HERO -->
  <section class="relative bg-gradient-to-br from-navy via-navy to-navy/90 text-white overflow-hidden">
    <HeroBackground />
    <div class="absolute inset-0 opacity-10 z-0">
      <div class="absolute top-0 right-0 w-96 h-96 bg-green rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-yellow rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-4 lg:px-8 py-16 lg:py-20 relative z-10 text-center">
      <h1 class="font-display text-4xl md:text-5xl font-bold">Contact Us</h1>
      <p class="mt-4 text-white/85 text-lg max-w-3xl mx-auto">
        Choose the fastest way to reach us. We respond quickly for quotes, bookings, and questions.
      </p>

      <div class="mt-8 flex flex-col sm:flex-row gap-3 justify-center">
        <a
          href={WHATSAPP_LINK}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center rounded-xl bg-green px-6 py-3 font-semibold text-white hover:brightness-105"
        >
          WhatsApp us
        </a>

        <a
          href={`mailto:${EMAIL}`}
          class="inline-flex items-center justify-center rounded-xl bg-white/10 px-6 py-3 font-semibold text-white ring-1 ring-white/15 hover:bg-white/15"
        >
          Email us
        </a>
      </div>
    </div>
  </section>

  <!-- CONTACT CARDS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-6xl mx-auto">
        <!-- WhatsApp -->
        <a href={WHATSAPP_LINK} target="_blank" rel="noopener noreferrer" class="contact-card">
          <div class="contact-icon bg-green/10 text-green">
            <svg viewBox="0 0 32 32" fill="currentColor" aria-hidden="true">
              <path d="M19.11 17.52c-.29-.15-1.7-.84-1.97-.94-.27-.1-.46-.15-.65.15-.19.29-.75.94-.92 1.13-.17.19-.34.22-.63.07-.29-.15-1.22-.45-2.32-1.44-.86-.77-1.44-1.72-1.61-2.01-.17-.29-.02-.45.13-.6.13-.13.29-.34.44-.51.15-.17.19-.29.29-.48.1-.19.05-.36-.02-.51-.07-.15-.65-1.57-.89-2.15-.23-.56-.47-.48-.65-.49h-.56c-.19 0-.51.07-.77.36-.27.29-1.01.99-1.01 2.42 0 1.44 1.04 2.83 1.19 3.03.15.19 2.05 3.13 4.97 4.39.69.3 1.23.48 1.65.61.69.22 1.31.19 1.81.11.55-.08 1.7-.69 1.94-1.35.24-.66.24-1.22.17-1.35-.07-.13-.27-.2-.56-.35z"/>
              <path d="M26.73 5.27C23.97 2.51 20.32 1 16.42 1 8.36 1 1.8 7.56 1.8 15.62c0 2.58.68 5.1 1.96 7.33L1.67 31l8.28-2.07a14.56 14.56 0 006.96 1.77h.01c8.06 0 14.62-6.56 14.62-14.62 0-3.9-1.51-7.55-4.27-10.81zM16.92 28.2h-.01a12.1 12.1 0 01-6.17-1.69l-.44-.26-4.91 1.22 1.31-4.79-.29-.49a12.08 12.08 0 01-1.83-6.47c0-6.67 5.43-12.1 12.1-12.1 3.23 0 6.27 1.26 8.56 3.55a12.03 12.03 0 013.54 8.55c0 6.67-5.43 12.1-12.1 12.1z"/>
            </svg>
          </div>
          <h3 class="font-display text-xl font-bold text-navy">WhatsApp</h3>
          <p class="text-gray-600">Fast replies for quotes and bookings.</p>
          <span class="contact-cta">Message us now</span>
        </a>

        <!-- Phone -->
        <a href="tel:07836671796" class="contact-card">
          <div class="contact-icon bg-navy/10 text-navy">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="font-display text-xl font-bold text-navy">Phone</h3>
          <p class="text-gray-600">Call for scheduling and availability.</p>
          <span class="contact-cta">Call 07836 671796</span>
        </a>

        <!-- Email -->
        <a href={`mailto:${EMAIL}`} class="contact-card">
          <div class="contact-icon bg-yellow/20 text-navy">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="font-display text-xl font-bold text-navy">Email</h3>
          <p class="text-gray-600">Best for detailed requests and instructions.</p>
          <span class="contact-cta">Send an email</span>
        </a>
      </div>

      <!-- SOCIAL STRIP -->
      <div class="max-w-6xl mx-auto mt-10 rounded-2xl border border-gray-200 bg-gray-50 p-6">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4">
          <div class="text-center md:text-left">
            <h3 class="font-display text-xl font-bold text-navy">Follow & message us</h3>
            <p class="text-gray-600">Facebook and Instagram messages also work.</p>
          </div>

          <div class="flex items-center flex-wrap justify-center gap-3">
            <a href={FACEBOOK_LINK} target="_blank" rel="noopener noreferrer" class="social-pill" aria-label="Facebook">
              <span class="social-icon">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M22 12a10 10 0 10-11.56 9.87v-6.99H7.9V12h2.54V9.8c0-2.5 1.49-3.88 3.77-3.88 1.09 0 2.23.2 2.23.2v2.46h-1.26c-1.24 0-1.63.77-1.63 1.56V12h2.78l-.44 2.88h-2.34v6.99A10 10 0 0022 12z"/>
                </svg>
              </span>
              Facebook
            </a>

            <a href={INSTAGRAM_LINK} target="_blank" rel="noopener noreferrer" class="social-pill" aria-label="Instagram">
              <span class="social-icon">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M7 2h10a5 5 0 015 5v10a5 5 0 01-5 5H7a5 5 0 01-5-5V7a5 5 0 015-5zm10 2H7a3 3 0 00-3 3v10a3 3 0 003 3h10a3 3 0 003-3V7a3 3 0 00-3-3zm-5 4a5 5 0 110 10 5 5 0 010-10zm0 2a3 3 0 100 6 3 3 0 000-6zm5.25-2.5a1.25 1.25 0 110 2.5 1.25 1.25 0 010-2.5z"/>
                </svg>
              </span>
              Instagram
            </a>

            <a href={WHATSAPP_LINK} target="_blank" rel="noopener noreferrer" class="social-pill social-pill--whatsapp" aria-label="WhatsApp">
              <span class="social-icon social-icon--whatsapp">
                <svg class="w-5 h-5" viewBox="0 0 32 32" fill="currentColor" aria-hidden="true">
                  <path d="M19.11 17.52c-.29-.15-1.7-.84-1.97-.94-.27-.1-.46-.15-.65.15-.19.29-.75.94-.92 1.13-.17.19-.34.22-.63.07-.29-.15-1.22-.45-2.32-1.44-.86-.77-1.44-1.72-1.61-2.01-.17-.29-.02-.45.13-.6.13-.13.29-.34.44-.51.15-.17.19-.29.29-.48.1-.19.05-.36-.02-.51-.07-.15-.65-1.57-.89-2.15-.23-.56-.47-.48-.65-.49h-.56c-.19 0-.51.07-.77.36-.27.29-1.01.99-1.01 2.42 0 1.44 1.04 2.83 1.19 3.03.15.19 2.05 3.13 4.97 4.39.69.3 1.23.48 1.65.61.69.22 1.31.19 1.81.11.55-.08 1.7-.69 1.94-1.35.24-.66.24-1.22.17-1.35-.07-.13-.27-.2-.56-.35z"/>
                  <path d="M26.73 5.27C23.97 2.51 20.32 1 16.42 1 8.36 1 1.8 7.56 1.8 15.62c0 2.58.68 5.1 1.96 7.33L1.67 31l8.28-2.07a14.56 14.56 0 006.96 1.77h.01c8.06 0 14.62-6.56 14.62-14.62 0-3.9-1.51-7.55-4.27-10.81zM16.92 28.2h-.01a12.1 12.1 0 01-6.17-1.69l-.44-.26-4.91 1.22 1.31-4.79-.29-.49a12.08 12.08 0 01-1.83-6.47c0-6.67 5.43-12.1 12.1-12.1 3.23 0 6.27 1.26 8.56 3.55a12.03 12.03 0 013.54 8.55c0 6.67-5.43 12.1-12.1 12.1z"/>
                </svg>
              </span>
              WhatsApp
            </a>
          </div>
        </div>

        <div class="mt-6 text-center text-gray-600">
          <span class="inline-flex items-center gap-2 rounded-xl bg-white border border-gray-200 px-4 py-3">
            <svg class="w-5 h-5 text-green" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Serving Stirling & surrounding areas across Scotland.
          </span>
        </div>
      </div>

      <!-- FORMS -->
      <div class="max-w-6xl mx-auto mt-10 grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Contact Form (Netlify) -->
        <div class="form-card">
          <h2 class="font-display text-2xl font-bold text-navy">Send a message</h2>
          <p class="mt-2 text-gray-600">
            This form is connected to Netlify. Messages will be sent to <strong>{EMAIL}</strong>.
          </p>

          <form
            name="contact"
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
            class="mt-6 space-y-4"
          >
            <input type="hidden" name="form-name" value="contact" />
            <p class="hidden">
              <label>
                Don’t fill this out: <input name="bot-field" />
              </label>
            </p>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="field-label" for="name">Full name</label>
                <input id="name" name="name" class="field" required />
              </div>
              <div>
                <label class="field-label" for="phone">Phone (optional)</label>
                <input id="phone" name="phone" class="field" />
              </div>
            </div>

            <div>
              <label class="field-label" for="email">Email</label>
              <input id="email" name="email" type="email" class="field" required />
            </div>

            <div>
              <label class="field-label" for="subject">Subject</label>
              <input id="subject" name="subject" class="field" placeholder="Quote request / Booking / Question" required />
            </div>

            <div>
              <label class="field-label" for="message">Message</label>
              <textarea id="message" name="message" rows="5" class="field" required></textarea>
            </div>

            <button type="submit" class="btn-primary">
              Submit message
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </button>
          </form>
        </div>

        <!-- CV Upload (Netlify) -->
        <div class="form-card">
          <h2 class="font-display text-2xl font-bold text-navy">Send your CV</h2>
          <p class="mt-2 text-gray-600">
            Upload your CV here. You can also email it directly to <strong>{EMAIL}</strong>.
          </p>

          <form
            name="cv"
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
            encType="multipart/form-data"
            class="mt-6 space-y-4"
          >
            <input type="hidden" name="form-name" value="cv" />
            <p class="hidden">
              <label>
                Don’t fill this out: <input name="bot-field" />
              </label>
            </p>

            <div>
              <label class="field-label" for="cv-name">Full name</label>
              <input id="cv-name" name="name" class="field" required />
            </div>

            <div>
              <label class="field-label" for="cv-email">Email</label>
              <input id="cv-email" name="email" type="email" class="field" required />
            </div>

            <div>
              <label class="field-label" for="role">Role interested in</label>
              <input id="role" name="role" class="field" placeholder="Cleaner / Supervisor / Other" />
            </div>

            <div>
              <label class="field-label" for="cv-file">CV file</label>
              <input id="cv-file" name="cv" type="file" class="field file-field" accept=".pdf,.doc,.docx" required />
              <p class="mt-2 text-sm text-gray-500">Accepted: PDF, DOC, DOCX</p>
            </div>

            <button type="submit" class="btn-primary">
              Upload CV
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5-5m0 0l5 5m-5-5v12" />
              </svg>
            </button>
          </form>
        </div>
      </div>
    </div>

    <style>
      .contact-card{
        border: 1px solid rgba(229,231,235,1);
        border-radius: 18px;
        background: white;
        padding: 26px;
        box-shadow: 0 4px 18px rgba(0,0,0,.06);
        transition: all .25s ease;
        display: block;
      }
      .contact-card:hover{
        transform: translateY(-4px);
        box-shadow: 0 12px 28px rgba(0,0,0,.10);
        border-color: rgba(47,164,79,.35);
      }
      .contact-icon{
        width: 54px; height: 54px; border-radius: 16px;
        display:flex; align-items:center; justify-content:center;
        margin-bottom: 14px;
      }
      .contact-icon svg{ width: 24px; height: 24px; }
      .contact-cta{
        display: inline-flex;
        margin-top: 14px;
        padding: 10px 14px;
        border-radius: 12px;
        background: rgba(15, 27, 61, 0.06);
        color: #0b1f3a;
        font-weight: 800;
      }

      .social-pill{
        display: inline-flex; align-items:center; gap: 10px;
        padding: 12px 14px;
        border-radius: 999px;
        background: white;
        border: 1px solid rgba(229,231,235,1);
        box-shadow: 0 4px 14px rgba(0,0,0,.06);
        font-weight: 800;
        color: #0b1f3a;
        transition: all .2s ease;
        white-space: nowrap;
      }
      .social-pill:hover{ transform: translateY(-2px); border-color: rgba(47,164,79,.35); }
      .social-icon{
        width: 34px; height: 34px;
        display:flex; align-items:center; justify-content:center;
        border-radius: 999px;
        background: rgba(15,27,61,.06);
      }
      .social-pill--whatsapp{
        background: #2FA44F;
        color: white;
        border-color: rgba(47,164,79,.25);
      }
      .social-icon--whatsapp{
        background: rgba(255,255,255,.18);
      }

      .form-card{
        border: 1px solid rgba(229,231,235,1);
        border-radius: 18px;
        background: white;
        padding: 26px;
        box-shadow: 0 4px 18px rgba(0,0,0,.06);
      }
      .field-label{
        display:block;
        font-weight: 800;
        color: #0b1f3a;
        margin-bottom: 8px;
        font-size: 0.95rem;
      }
      .field{
        width: 100%;
        border: 1px solid rgba(229,231,235,1);
        border-radius: 14px;
        padding: 12px 14px;
        background: #fff;
        outline: none;
        transition: all .2s ease;
      }
      .field:focus{
        border-color: rgba(47,164,79,.55);
        box-shadow: 0 0 0 4px rgba(47,164,79,.12);
      }
      .file-field{
        padding: 10px 12px;
      }
      .btn-primary{
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 14px;
        padding: 12px 16px;
        background: #2FA44F;
        color: white;
        font-weight: 800;
        transition: all .2s ease;
        width: 100%;
      }
      .btn-primary:hover{
        filter: brightness(1.05);
        box-shadow: 0 12px 28px rgba(47,164,79,.22);
        transform: translateY(-1px);
      }
      @media (min-width: 1024px){
        .btn-primary{ width: auto; }
      }
    </style>
  </section>
</BaseLayout>