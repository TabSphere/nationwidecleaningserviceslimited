---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroBackground from "../components/HeroBackground.astro";

const founders = [
  {
    name: "Frederick Oppong Tabiri",
    title: "Founder & Managing Director",
    bio: "I lead Nationwide Cleaning Services Limited with a strong focus on quality, structure, and long‑term growth. I oversee our systems, service standards, digital visibility, and overall direction to ensure every client receives a professional and consistent experience.",
    image: "/images/team/frederick-oppong-tabiri.jpg"
  },
  {
    name: "John Williams Ampah",
    title: "Founder & Client Services Director",
    bio: "I oversee client relationships and service delivery. I make sure communication is clear, bookings run smoothly, and every clean meets the standard we promise — dependable service and happy customers.",
    image: "/images/team/john-williams-ampah.jpg"
  }
];

const team = [
  {
    name: "Vincent Marfo Peprah",
    title: "Operations & Growth Advisor",
    bio: "I support the business with operational structure and growth strategy, helping streamline processes and guide sustainable expansion across Stirling and surrounding areas.",
    image: "/images/team/vincent-marfo-peprah.jpg"
  },
  {
    name: "Priscilla Takyi",
    title: "Recruitment & Support Coordinator",
    bio: "I support recruitment and internal coordination, helping us build a reliable and organised team that maintains our high standards of service delivery.",
    image: "/images/team/priscilla-takyi.jpg"
  },
  {
    name: "Maame Araba Steele-Dadzie",
    title: "Community Engagement Coordinator",
    bio: "I lead community outreach and engagement initiatives, strengthening local relationships and supporting brand visibility across Stirling and neighbouring communities.",
    image: "/images/team/maame-araa-steele-dadzie.jpg" // make sure this file exists in public/images/team/
  }
];

const PLACEHOLDER = "/images/team/placeholder.jpg";
---

<BaseLayout
  title="Leadership & Growth Team | Nationwide Cleaning Services Limited"
  description="Meet the leadership and support team behind Nationwide Cleaning Services Limited."
>
  <!-- HERO with slideshow -->
  <section class="relative bg-gradient-to-br from-navy via-navy to-navy/90 text-white overflow-hidden">
    <HeroBackground />

    <div class="absolute inset-0 opacity-10 z-0">
      <div class="absolute top-0 right-0 w-96 h-96 bg-green rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-yellow rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-4 lg:px-8 py-16 lg:py-20 relative z-10 text-center">
      <span class="inline-flex items-center rounded-full bg-white/10 px-4 py-2 text-sm ring-1 ring-white/15">
        Leadership & Growth Team
      </span>

      <h1 class="mt-6 font-display text-4xl md:text-5xl font-bold">
        The people behind our standards
      </h1>

      <p class="mt-4 max-w-3xl mx-auto text-white/85 text-lg">
        Meet the team behind Nationwide Cleaning Services Limited. Our leadership and support team are committed to delivering professional, reliable cleaning services across Stirling and surrounding areas.
      </p>

      <div class="mt-8 flex flex-col sm:flex-row gap-3 justify-center">
        <a href="/get-a-quote" class="btn-hero btn-hero--green">Get a Free Quote</a>
        <a href="#contact" class="btn-hero btn-hero--ghost">Contact Us</a>
      </div>
    </div>

    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 100" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto">
        <path d="M0 0L60 8.33333C120 16.6667 240 33.3333 360 41.6667C480 50 600 50 720 41.6667C840 33.3333 960 16.6667 1080 16.6667C1200 16.6667 1320 33.3333 1380 41.6667L1440 50V100H1380C1320 100 1200 100 1080 100C960 100 840 100 720 100C600 100 480 100 360 100C240 100 120 100 60 100H0V0Z" fill="white"/>
      </svg>
    </div>
  </section>

  <!-- FOUNDERS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="text-center mb-10">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-navy">Founders</h2>
        <p class="mt-3 text-gray-600">Leadership that keeps standards high and communication simple.</p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-7 max-w-6xl mx-auto">
        {founders.map((m) => (
          <article class="team-card team-card--founder">
            <div class="team-top">
              <div class="team-photo-wrap team-photo-wrap--lg">
                <img
                  src={m.image}
                  alt={m.name}
                  class="team-photo"
                  loading="lazy"
                  onerror={`this.src='${PLACEHOLDER}'`}
                />
              </div>

              <div class="min-w-0">
                <h3 class="font-display text-2xl font-bold text-navy leading-tight">{m.name}</h3>
                <p class="mt-1 text-green font-semibold">{m.title}</p>
              </div>
            </div>

            <p class="mt-4 text-gray-700 leading-relaxed">{m.bio}</p>

            <div class="mt-5 flex flex-wrap gap-3">
              <a href="/contact" class="btn btn--navy">Contact us</a>
              <a href="/get-a-quote" class="btn btn--green">Request a quote</a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- SUPPORT TEAM -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="text-center mb-10">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-navy">Leadership & Support</h2>
        <p class="mt-3 text-gray-600">The team supporting our operations, growth and community engagement.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-7 max-w-6xl mx-auto">
        {team.map((m) => (
          <article class="team-card team-card--support">
            <div class="team-top team-top--compact">
              <div class="team-photo-wrap team-photo-wrap--md">
                <img
                  src={m.image}
                  alt={m.name}
                  class="team-photo"
                  loading="lazy"
                  onerror={`this.src='${PLACEHOLDER}'`}
                />
              </div>

              <div class="min-w-0">
                <h3 class="font-display text-lg font-bold text-navy leading-tight">{m.name}</h3>
                <p class="mt-1 text-green font-semibold text-sm">{m.title}</p>
              </div>
            </div>

            <p class="mt-3 text-gray-700 text-sm leading-relaxed">{m.bio}</p>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- CONTACT + CV SUBMIT -->
  <section id="contact" class="py-16 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-10 items-start">
        <div>
          <h2 class="font-display text-3xl md:text-4xl font-bold text-navy">Contact the team</h2>
          <p class="mt-3 text-gray-600">
            Send us a message and we’ll respond as quickly as possible. For quick replies, WhatsApp is best.
          </p>

          <div class="mt-6 space-y-3 text-gray-700">
            <p><strong>Email:</strong> hello@nationwidecleaningserviceslimited.co.uk</p>
            <p><strong>Phone:</strong> 07836 671796</p>
            <p><strong>Service area:</strong> Stirling & surrounding areas</p>
          </div>
        </div>

        <!-- Netlify Forms (recommended) -->
        <div class="rounded-2xl border border-gray-200 bg-gray-50 p-8">
          <h3 class="font-display text-2xl font-bold text-navy">Send a message / Submit a CV</h3>
          <p class="mt-2 text-gray-600 text-sm">
            This form can email you via Netlify Forms. (Works best when hosted on Netlify.)
          </p>

          <form
            name="leadership-contact"
            method="POST"
            data-netlify="true"
            enctype="multipart/form-data"
            class="mt-6 space-y-4"
          >
            <input type="hidden" name="form-name" value="leadership-contact" />

            <div>
              <label class="text-sm font-semibold text-navy">Full name</label>
              <input name="name" required class="field" placeholder="Your name" />
            </div>

            <div>
              <label class="text-sm font-semibold text-navy">Email</label>
              <input name="email" type="email" required class="field" placeholder="you@example.com" />
            </div>

            <div>
              <label class="text-sm font-semibold text-navy">Message</label>
              <textarea name="message" required class="field field--textarea" placeholder="How can we help?"></textarea>
            </div>

            <div>
              <label class="text-sm font-semibold text-navy">Upload CV (optional)</label>
              <input name="cv" type="file" class="field field--file" />
              <p class="mt-1 text-xs text-gray-500">PDF/DOC recommended.</p>
            </div>

            <button type="submit" class="btn btn--green w-full justify-center">Send</button>

            <!-- Simple email fallback link -->
            <p class="text-xs text-gray-500 text-center">
              If the form ever fails, email us directly:
              <a class="text-green font-semibold" href="mailto:hello@nationwidecleaningserviceslimited.co.uk">hello@nationwidecleaningserviceslimited.co.uk</a>
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>

  <style>
    .btn-hero{
      display:inline-flex;align-items:center;justify-content:center;
      padding:12px 18px;border-radius:12px;font-weight:800;
      transition:all .2s ease;
    }
    .btn-hero--green{ background:#2FA44F;color:#fff; }
    .btn-hero--green:hover{ filter:brightness(1.05); transform:translateY(-1px); }
    .btn-hero--ghost{ background:rgba(255,255,255,.10);color:#fff;border:1px solid rgba(255,255,255,.20); }
    .btn-hero--ghost:hover{ background:rgba(255,255,255,.14); transform:translateY(-1px); }

    .team-card{
      background:#fff;border:1px solid #e5e7eb;border-radius:18px;
      box-shadow:0 6px 18px rgba(0,0,0,.06);
      padding:22px; transition:all .2s ease;
    }
    .team-card:hover{
      transform:translateY(-3px);
      box-shadow:0 14px 30px rgba(0,0,0,.10);
      border-color:rgba(47,164,79,.35);
    }
    .team-top{ display:flex; gap:16px; align-items:center; }
    .team-top--compact{ align-items:flex-start; }
    .team-photo-wrap{
      overflow:hidden;border-radius:16px;flex-shrink:0;
      border:1px solid rgba(15,27,61,.10);
      background:rgba(15,27,61,.04);
    }
    .team-photo-wrap--lg{ width:96px; height:96px; }
    .team-photo-wrap--md{ width:78px; height:78px; }
    .team-photo{ width:100%; height:100%; object-fit:cover; display:block; }

    .btn{
      display:inline-flex;align-items:center;gap:8px;
      padding:10px 14px;border-radius:12px;font-weight:800;
      transition:all .2s ease;
    }
    .btn--navy{ background:#0b1f3a;color:#fff; }
    .btn--green{ background:#2FA44F;color:#fff; }
    .btn:hover{ transform:translateY(-1px); filter:brightness(1.03); }

    .field{
      width:100%;
      margin-top:6px;
      border:1px solid #e5e7eb;
      border-radius:12px;
      padding:12px 12px;
      background:#fff;
      outline:none;
    }
    .field:focus{ border-color:rgba(47,164,79,.55); box-shadow:0 0 0 3px rgba(47,164,79,.12); }
    .field--textarea{ min-height:120px; resize:vertical; }
    .field--file{ padding:10px; }

    @media (max-width: 768px){
      .team-top{ flex-direction:column; text-align:center; }
      .team-top--compact{ align-items:center; }
    }
  </style>
</BaseLayout>