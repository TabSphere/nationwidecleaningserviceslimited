// ✅ Because you already have /public/images/services/ folder
const SERVICE_PLACEHOLDER = "/images/services/placeholder.jpg";

const testimonials = [
  {
    text: "Fantastic service from start to finish. The team was professional, thorough, and left our office absolutely spotless. We've been using them for six months now and couldn't be happier.",
    author: "Sarah M.",
    role: "Office Manager, Stirling"
  },
  {
    text: "Moving house is stressful enough without having to worry about cleaning. NCS took care of everything - the property was immaculate when we handed over the keys. Highly recommend!",
    author: "James & Linda T.",
    role: "Homeowners, Bridge of Allan"
  },
  {
    text: "We switched to their eco-friendly cleaning service and are delighted. The results are just as impressive, and we feel good knowing we're making a better choice for the environment.",
    author: "Emma K.",
    role: "Resident, Dunblane"
  }
];

const whyChooseUs = [
  {
    title: 'Trained & Insured',
    description: 'All our cleaners are fully trained, vetted, and insured for your complete peace of mind.',
    icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z'
  },
  {
    title: 'Flexible Scheduling',
    description: 'Choose from weekly, fortnightly, or one-off cleans to suit your lifestyle and budget.',
    icon: 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z'
  },
  {
    title: 'Quality Guarantee',
    description: 'We take pride in delivering exceptional results every time. Not satisfied? We\'ll make it right.',
    icon: 'M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z'
  },
  {
    title: 'Local & Trusted',
    description: 'Based in Stirling, serving our local community with reliable, friendly service since day one.',
    icon: 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z'
  }
];
---

<BaseLayout
  title="Professional Residential & Commercial Cleaning | Nationwide Cleaning Services"
  description="Reliable cleaning services across Stirling and surrounding areas in Scotland. Trained & insured cleaners, flexible scheduling, exceptional results. Get a free quote today."
>
  <!-- Hero Section with Background Slideshow -->
  <section class="relative bg-gradient-to-br from-navy via-navy to-navy/90 text-white overflow-hidden">
    <HeroBackground />

    <div class="absolute inset-0 opacity-5 z-0">
      <div class="absolute top-0 right-0 w-96 h-96 bg-green rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-yellow rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-4 lg:px-8 py-20 lg:py-32 relative z-10">
      <div class="max-w-4xl">
        <div class="inline-block mb-6 px-4 py-2 bg-green/20 border border-green/30 rounded-full text-green text-sm font-semibold backdrop-blur-sm">
          Serving Stirling & Surrounding Areas
        </div>

        <h1 class="font-display text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
          Professional Residential & Commercial <span class="text-green">Cleaning</span>
        </h1>

        <p class="text-lg md:text-xl text-gray-200 mb-10 leading-relaxed max-w-2xl">
          Reliable cleaning across Stirling and surrounding areas in Scotland. Trained & insured cleaners, flexible scheduling, exceptional results.
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/get-a-quote" class="inline-flex items-center justify-center bg-green hover:bg-green/90 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all hover:shadow-lg hover:shadow-green/30 hover:scale-105">
            Get a Free Quote
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>

          <a href="tel:07836671796" class="inline-flex items-center justify-center bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white border border-white/20 px-8 py-4 rounded-lg font-semibold text-lg transition-all">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call 07836 671796
          </a>
        </div>
      </div>
    </div>

    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 100" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto">
        <path d="M0 0L60 8.33333C120 16.6667 240 33.3333 360 41.6667C480 50 600 50 720 41.6667C840 33.3333 960 16.6667 1080 16.6667C1200 16.6667 1320 33.3333 1380 41.6667L1440 50V100H1380C1320 100 1200 100 1080 100C960 100 840 100 720 100C600 100 480 100 360 100C240 100 120 100 60 100H0V0Z" fill="white"/>
      </svg>
    </div>
  </section>

  <!-- Trust Strip -->
  <section class="py-8 bg-gray-50 border-y border-gray-200 fade-in-section">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        <div class="flex flex-col items-center">
          <svg class="w-8 h-8 text-green mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          <p class="text-sm font-semibold text-navy">Trained & Insured</p>
        </div>
        <div class="flex flex-col items-center">
          <svg class="w-8 h-8 text-green mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <p class="text-sm font-semibold text-navy">Flexible Scheduling</p>
        </div>
        <div class="flex flex-col items-center">
          <svg class="w-8 h-8 text-green mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
          <p class="text-sm font-semibold text-navy">Residential & Commercial</p>
        </div>
        <div class="flex flex-col items-center">
          <svg class="w-8 h-8 text-green mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <p class="text-sm font-semibold text-navy">Free Quotes</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Preview -->
  <section class="py-20 fade-in-section">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-navy mb-4">Our Cleaning Services</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          From regular home cleaning to specialized commercial solutions, we deliver exceptional results every time.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service) => (
          <a href={service.link} class="group bg-white border-2 border-gray-100 hover:border-green rounded-2xl p-8 transition-all hover:shadow-xl hover:shadow-green/10 hover:-translate-y-2 card-enhanced fade-in-section">

            <!-- ✅ NEW: Service image header (this was placed wrong before) -->
            <div class="h-40 w-full overflow-hidden rounded-xl bg-gray-100 border border-gray-200 mb-6">
              <img
                src={service.image || SERVICE_PLACEHOLDER}
                alt=""
                class="h-full w-full object-cover"
                loading="lazy"
                onerror={`this.src='${SERVICE_PLACEHOLDER}'`}
              />
            </div>

            <div class="w-14 h-14 bg-green/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-green/20 transition-all card-icon">
              <svg class="w-7 h-7 text-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={service.icon} />
              </svg>
            </div>

            <h3 class="font-display text-xl font-semibold text-navy mb-3 group-hover:text-green transition-colors">{service.title}</h3>
            <p class="text-gray-600 mb-4">{service.description}</p>

            <span class="inline-flex items-center text-green font-semibold text-sm group-hover:gap-2 transition-all">
              Learn more
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- (the rest of your file stays EXACTLY the same from here) -->
  <!-- Why Choose Us -->
  <section class="py-20 bg-gradient-to-br from-navy to-navy/95 text-white relative overflow-hidden fade-in-section">
    <div class="absolute inset-0 opacity-5">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-green rounded-full blur-3xl"></div>
    </div>
    <div class="container mx-auto px-4 lg:px-8 relative">
      <div class="text-center mb-16">
        <h2 class="font-display text-3xl md:text-4xl font-bold mb-4">Why Choose Us</h2>
        <p class="text-lg text-gray-300 max-w-2xl mx-auto">
          We're committed to delivering outstanding cleaning services with professionalism and care.
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {whyChooseUs.map((item) => (
          <div class="text-center">
            <div class="w-16 h-16 bg-green/20 rounded-2xl flex items-center justify-center mx-auto mb-6 border border-green/30">
              <svg class="w-8 h-8 text-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon} />
              </svg>
            </div>
            <h3 class="font-display text-xl font-semibold mb-3">{item.title}</h3>
            <p class="text-gray-300">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Leadership teaser -->
  <section class="py-16 bg-gray-50 fade-in-section">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="rounded-2xl bg-white p-8 border-2 border-gray-200 hover:border-green transition-all">
        <div class="md:flex md:items-center md:justify-between gap-6">
          <div class="max-w-3xl">
            <h2 class="font-display text-3xl font-bold text-navy">Leadership & Growth Team</h2>
            <p class="mt-3 text-gray-600">
              Get to know the people behind our standards, client care, and community-first approach — serving Stirling and surrounding areas.
            </p>
          </div>
          <div class="mt-6 md:mt-0">
            <a href="/leadership" class="inline-flex items-center rounded-xl bg-green px-6 py-3 font-semibold text-white hover:brightness-105">
              View the team
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-20 fade-in-section">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-navy mb-4">Customer Feedback</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Here's what some of our satisfied customers have to say about our service.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial) => (
          <div class="bg-white border-2 border-gray-100 rounded-2xl p-8 hover:border-green transition-all hover:shadow-lg card-enhanced fade-in-section">
            <div class="flex gap-1 mb-4">
              {[...Array(5)].map((_, i) => (
                <svg class="w-5 h-5 text-yellow" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <p class="text-gray-700 mb-6 italic">"{testimonial.text}"</p>
            <div class="border-t border-gray-200 pt-4">
              <p class="font-semibold text-navy">{testimonial.author}</p>
              <p class="text-sm text-gray-600">{testimonial.role}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="py-20 bg-gray-50 fade-in-section">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-navy mb-6">Serving Stirling & Surrounding Areas</h2>
        <p class="text-lg text-gray-600 mb-8">
          We proudly serve Stirling and the surrounding areas across Scotland, bringing professional cleaning services to homes and businesses throughout the region.
        </p>
        <div class="flex flex-wrap justify-center gap-3 mb-10">
          <span class="px-4 py-2 bg-white border border-gray-200 rounded-lg text-navy font-medium">Stirling</span>
          <span class="px-4 py-2 bg-white border border-gray-200 rounded-lg text-navy font-medium">Bridge of Allan</span>
          <span class="px-4 py-2 bg-white border border-gray-200 rounded-lg text-navy font-medium">Dunblane</span>
          <span class="px-4 py-2 bg-white border border-gray-200 rounded-lg text-navy font-medium">Callander</span>
          <span class="px-4 py-2 bg-white border border-gray-200 rounded-lg text-navy font-medium">Doune</span>
          <span class="px-4 py-2 bg-white border border-gray-200 rounded-lg text-navy font-medium">Bannockburn</span>
          <span class="px-4 py-2 bg-white border border-gray-200 rounded-lg text-navy font-medium">+ More</span>
        </div>
        <a href="/get-a-quote" class="inline-flex items-center justify-center bg-green hover:bg-green/90 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all hover:shadow-lg hover:shadow-green/30">
          Check If We Cover Your Area
        </a>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-20 bg-gradient-to-r from-green to-green/90 text-white fade-in-section">
    <div class="container mx-auto px-4 lg:px-8 text-center">
      <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">Ready for a Spotless Space?</h2>
      <p class="text-xl mb-10 max-w-2xl mx-auto text-white/90">
        Get your free, no-obligation quote today and experience the difference professional cleaning makes.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/get-a-quote" class="inline-flex items-center justify-center bg-white text-green hover:bg-gray-50 px-8 py-4 rounded-lg font-semibold text-lg transition-all hover:shadow-xl">
          Get Your Free Quote
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        <a href="tel:07836671796" class="inline-flex items-center justify-center bg-navy hover:bg-navy/90 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Or Call Us Now
        </a>
      </div>
    </div>
  </section>
</BaseLayout>